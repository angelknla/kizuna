<%- include('partials/header') %>


<main class="form-signin">

  <div class="container-fluid title-div">
    <h1>New User Registration</h1>

  </div>

  <form class="form-width" method="POST" action="/register">

    <div class="form-floating">
      <input type="name" name="name" class="form-control" id="floatingInput" >
      <label for="floatingInput">First Name</label>
    </div>

    <div class="form-floating">
      <input type="surname" name="surname" class="form-control" id="floatingPassword" >
      <label for="floatingInput">Last Name</label>
    </div>


    <div class="form-floating">
      <input type="email" name="username" class="form-control" id="floatingInput" >
      <label for="floatingInput">Email</label>
    </div>

    <div class="form-floating">
      <input  type="password" name="password" class="form-control" id="floatingPassword" >
      <label for="floatingInput">Password</label>
    </div>

    <div class="form-floating">
      <input type="date" name="dateOfJoin" class="form-control" id="floatingInput" >
      <label for="floatingInput">Date Of Join</label>

    </div>

    <div class="form-floating">
      <input type="salary" name="salary" class="form-control" id="floatingPassword" >
      <label for="floatingInput">Salary</label>
    </div>

    <div class="form-floating">
      <input type="address" name="homeAddress" class="form-control" id="floatingInput" >
      <label for="floatingInput">Home Address</label>

    </div>

    <div class="form-floating">
      <input type="phone" name="phoneNumber" class="form-control" id="floatingPassword" >
      <label for="floatingInput">Phone Number</label>
    </div>

    <div class="form-floating">
      <input type="role" name="role" class="form-control" id="floatingPassword" >
      <label for="floatingInput">Employee Role</label>
    </div>

    <button class="w-100 btn btn-md btn-dark" type="submit">Register</button>
  </form>

</main>


<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js" integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf" crossorigin="anonymous"></script>

